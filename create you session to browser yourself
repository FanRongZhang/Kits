    //you can save the info of users to a memory tool such memcached,redis and so on
    //and of course,u can save any data you want to keep in cache
    
    //this file is only a idea of can let you manage users' logon action across many sites
    class User { }
    
    class Class1<T>
    {
        void SetSession(string key, T t) {
            StaticCache.Insert(key, t);
        }

        T GetSession(string key) {
            StaticCache.Get(key) as T;
        }

        setUserIdentity(User user){
            SetCookie("user_identity",value , DateTime.Now.AddDays(10));
            SetSession(user.guid,user);
        }

        User getUser(){
            GetSession(WebRequest-Cookie["user_identity"]) as User;
        }

    }
